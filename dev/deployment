apiVersion: apps/v1
kind: Deployment
metadata:
  name: training-deployment
  namespace: myapp
  labels:
    app: training
  annotations:
    version: v3.0.0  # Add the version here
spec:
  replicas: 1
  selector:
    matchLabels:
      app: training
  template:
    metadata:
      labels:
        app: training
    spec:
      containers:
        - name: training-container
          image: 1.26.0-alpine  # Replace 'my' with the actual image name
          ports:
            - containerPort: 8080

            