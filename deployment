apiVersion: apps/v1
kind: Deployment
metadata:
    name: training-deployment
    labels:
        app: training
    annotations:
        version: v1.0.0  # Add the version here
spec:
    replicas: 1
    selector:
        matchLabels:
            app: training
    template:
        metadata:
            labels:
                app: training
        spec:
            containers:
                - name: training-container
                    image: my
                    ports:
                        - containerPort: 8080